#define BLYNK_PRINT Serial

#define BLYNK_TEMPLATE_ID " "
#define BLYNK_TEMPLATE_NAME " "
#define BLYNK_AUTH_TOKEN " "

#include <ESP8266WiFi.h>
#include <BlynkSimpleEsp8266.h>
#include <DHT.h>
#include <Wire.h>
#include <LiquidCrystal_I2C.h>

BlynkTimer timer;

// LCD: I2C address 0x27, 16 columns, 2 rows
LiquidCrystal_I2C lcd(0x27, 16, 2);

// Blynk credentials
char auth[] = BLYNK_AUTH_TOKEN;
char ssid[] = " "; // Your WiFi name
char pass[] = " "; // Your WiFi password

// Sensor pins
#define DHT11_PIN   D4
#define RAIN_SENSOR A0
#define LDR_SENSOR  D7

// DHT object, specifying sensor type (DHT11)
DHT dht(DHT11_PIN, DHT11);

// LED widget on Virtual Pin V3
WidgetLED LED(V3);

void setup()
{
  Serial.begin(9600);
  lcd.init();
  lcd.backlight();

  Blynk.begin(auth, ssid, pass);
  dht.begin();
  pinMode(LDR_SENSOR, INPUT);

  // Set timers to call functions every second
  timer.setInterval(1000L, DHT11sensor);
  timer.setInterval(1000L, rainSensor);
  timer.setInterval(1000L, LDRsensor);
}

void loop()
{
  Blynk.run();  // Initiates Blynk
  timer.run();  // Runs BlynkTimer
}

void DHT11sensor()
{
  int temp  = dht.readTemperature();
  int humid = dht.readHumidity();

  if (isnan(temp) || isnan(humid)) {
    Serial.println("Failed to read from DHT sensor!");
    return;
  }

  // Send data to Blynk
  Blynk.virtualWrite(V0, temp);
  Blynk.virtualWrite(V1, humid);

  // Display on LCD
  lcd.setCursor(0, 0);
  lcd.print("T: ");
  lcd.print(temp);
  lcd.print((char)223);
  lcd.print("C ");

  lcd.setCursor(0, 1);
  lcd.print("H: ");
  lcd.print(humid);
  lcd.print("% ");

  // Print to Serial
  Serial.print("Temp: ");
  Serial.print(temp);
  Serial.print(" Â°C | Humidity: ");
  Serial.print(humid);
  Serial.println(" %");
}

void rainSensor()
{
  int value = analogRead(RAIN_SENSOR);

  // Convert 0-1023 to 0-100
  value = map(value, 0, 1023, 0, 100);

  // Send data to Blynk
  Blynk.virtualWrite(V2, value);

  // Display on LCD
  lcd.setCursor(8, 0);
  lcd.print("R: ");
  lcd.print(value);
  lcd.print("  ");

  // Print to Serial
  Serial.print("Rain level: ");
  Serial.println(value);
}

void LDRsensor()
{
  bool lightState = digitalRead(LDR_SENSOR);

  if (lightState == 0) {
    LED.on();
    lcd.setCursor(9, 1);
    lcd.print("L: High  ");
  } else {
    LED.off();
    lcd.setCursor(9, 1);
    lcd.print("L: Low   ");
  }

  // Send data to Blynk
  Blynk.virtualWrite(V3, lightState);

  // Print to Serial
  Serial.print("Light level: ");
  Serial.println(lightState);
}


